GEMINI_API_KEY="AIzaSyDgAPTJmZqxoKACI8gCcFpvrxwgp2k6Qsg"
GEMINI_GENERATION_MODEL="gemini-1.5-flash-latest"

GENERATION_TEMPERATURE=0.3
